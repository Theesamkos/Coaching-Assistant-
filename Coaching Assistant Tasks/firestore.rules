rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isOwner(userId);
      // Users can create/update their own profile
      allow create, update: if isOwner(userId);
      // Coaches can read player profiles if they're linked
      allow read: if isAuthenticated() 
        && resource.data.role == 'player' 
        && resource.data.coachId == request.auth.uid;
    }
    
    // Coaches collection (legacy, can be merged with users)
    match /coaches/{coachId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(coachId);
    }
    
    // Players collection (legacy, can be merged with users)
    match /players/{playerId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(playerId);
      // Coaches can read their players
      allow read: if isAuthenticated() 
        && resource.data.coachId == request.auth.uid;
    }
    
    // Invitations collection
    match /invitations/{invitationId} {
      // Coaches can create invitations
      allow create: if isAuthenticated() 
        && request.resource.data.coachId == request.auth.uid;
      // Coaches can read their own invitations
      allow read: if isAuthenticated() 
        && resource.data.coachId == request.auth.uid;
      // Anyone with the token can read pending invitations (for validation)
      allow read: if resource.data.status == 'pending';
      // Coaches can update their invitations
      allow update: if isAuthenticated() 
        && resource.data.coachId == request.auth.uid;
    }
    
    // Completions collection
    match /completions/{completionId} {
      // Players can create their own completions
      allow create: if isAuthenticated() 
        && request.resource.data.playerId == request.auth.uid;
      // Players can read their own completions
      allow read: if isAuthenticated() 
        && resource.data.playerId == request.auth.uid;
      // Coaches can read completions of their players
      allow read: if isAuthenticated() 
        && get(/databases/$(database)/documents/users/$(resource.data.playerId)).data.coachId == request.auth.uid;
      // Coaches can update completions to add feedback
      allow update: if isAuthenticated() 
        && get(/databases/$(database)/documents/users/$(resource.data.playerId)).data.coachId == request.auth.uid;
    }
    
    // Messages collection
    match /messages/{messageId} {
      // Users can create messages in conversations they're part of
      allow create: if isAuthenticated() 
        && (request.resource.data.senderId == request.auth.uid 
            || request.resource.data.recipientId == request.auth.uid);
      // Users can read messages in conversations they're part of
      allow read: if isAuthenticated() 
        && (resource.data.senderId == request.auth.uid 
            || resource.data.recipientId == request.auth.uid);
    }
    
    // Drills collection (will be used in Phase 2)
    match /drills/{drillId} {
      allow read: if isAuthenticated();
      // Coaches can create drills
      allow create: if isAuthenticated() 
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'coach';
      // Coaches can update/delete their drills
      allow update, delete: if isAuthenticated() 
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'coach';
    }
    
    // Scheduled sessions collection (will be used in Phase 2)
    match /scheduledSessions/{sessionId} {
      // Players can read their own sessions
      allow read: if isAuthenticated() 
        && resource.data.playerId == request.auth.uid;
      // Coaches can read sessions of their players
      allow read: if isAuthenticated() 
        && get(/databases/$(database)/documents/users/$(resource.data.playerId)).data.coachId == request.auth.uid;
      // Coaches can create sessions for their players
      allow create: if isAuthenticated() 
        && get(/databases/$(database)/documents/users/$(request.resource.data.playerId)).data.coachId == request.auth.uid;
      // Coaches can update/delete sessions
      allow update, delete: if isAuthenticated() 
        && get(/databases/$(database)/documents/users/$(resource.data.playerId)).data.coachId == request.auth.uid;
    }
    
    // AI conversations collection (will be used in Phase 3)
    match /aiConversations/{conversationId} {
      // Players can read their own conversations
      allow read: if isAuthenticated() 
        && resource.data.playerId == request.auth.uid;
      // Players can create conversations
      allow create: if isAuthenticated() 
        && request.resource.data.playerId == request.auth.uid;
    }
  }
}



